<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.androidlivephoto.ResultViewer"
    android:background="@color/colorAccent"
    >

    <com.example.asus.androidlivephoto.GifMovieView
        android:id="@+id/gif1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="onGifClick"
        android:layout_centerInParent="true"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@+id/gif1"
       android:layout_centerHorizontal="true"
       android:weightSum="2">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/dropboxlogin"
           android:text="Log in Dropbox"
           android:layout_weight="1"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/dropboxupload"
           android:text="Upload File"
            android:gravity="center"
           android:layout_weight="1"
           />
   </LinearLayout>

</RelativeLayout>
